{
  "name": "hse-app-desktop",
  "version": "1.0.4",
  "private": true,
  "author": {
    "name": "Alex Koledae",
    "email": "work.ax3l3rator@gmail.com",
    "url": "https://github.com/Ax3l3rator"
  },
  "description": "Desktop app for HSE",
  "scripts": {
    "build": "nuxt build && electron-builder",
    "dev": "nuxt dev",
    "generate": "nuxt generate && electron-builder",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "nuxt generate",
    "start": "electron ./dist-electron/index.js"
  },
  "devDependencies": {
    "@nuxt/devtools": "1.0.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@vueuse/core": "^10.7.2",
    "@vueuse/nuxt": "^10.7.2",
    "dotenv": "^16.3.1",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "electron-store": "^8.2.0",
    "jsonwebtoken": "^9.0.2",
    "nuxt": "^3.9.1",
    "nuxt-electron": "^0.7.0",
    "sass": "^1.70.0",
    "tree-kill": "^1.2.2",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-vuetify": "^2.0.1",
    "vue": "^3.4.11",
    "vue-router": "^4.2.5"
  },
  "main": "dist-electron/index.js",
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@pinia/nuxt": "^0.5.1",
    "pinia": "^2.1.7",
    "vuetify": "3.4.11"
  },
  "resolutions": {
    "jackspeak": "2.1.1"
  },
  "build": {
    "appId": "hse.app.desktop",
    "asar": true,
    "productName": "HSE App Desktop",
    "protocols": {
      "name": "electron-deep-linking",
      "schemes": [
        "ruz-app-fiddle"
      ]
    },
    "directories": {
      "output": "release/${version}"
    },
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}_setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "mimeTypes": [
        "x-scheme-handler/ruz-app-fiddle"
      ],
      "target": "pacman",
      "desktop": {
        "exec": "ruz-app-fiddle %u"
      }
    },
    "files": [
      ".output/**/*",
      "dist-electron",
      ".env"
    ]
  },
  "packageManager": "yarn@4.5.1+sha512.341db9396b6e289fecc30cd7ab3af65060e05ebff4b3b47547b278b9e67b08f485ecd8c79006b405446262142c7a38154445ef7f17c1d5d1de7d90bf9ce7054d"
}
