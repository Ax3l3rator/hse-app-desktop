{
  "name": "hse-app-desktop",
  "version": "1.0.5",
  "private": true,
  "author": {
    "name": "Alex Koledaev",
    "email": "work.ax3l3rator@gmail.com",
    "url": "https://github.com/Ax3l3rator"
  },
  "description": "Desktop app for HSE",
  "scripts": {
    "build": "nuxt build && electron-builder",
    "dev": "nuxt dev",
    "generate": "nuxt generate && electron-builder",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "nuxt generate",
    "start": "electron ./dist-electron/index.js"
  },
  "devDependencies": {
    "@nuxt/devtools": "2.3.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.13.10",
    "@vueuse/core": "^13.0.0",
    "@vueuse/nuxt": "^13.0.0",
    "dotenv": "^16.3.1",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "electron-store": "^10.0.1",
    "jsonwebtoken": "^9.0.2",
    "nuxt": "^3.9.1",
    "nuxt-electron": "^0.7.0",
    "sass": "^1.70.0",
    "tree-kill": "^1.2.2",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-vuetify": "^2.0.1",
    "vue": "^3.4.11",
    "vue-router": "^4.2.5"
  },
  "main": "dist-electron/index.js",
  "dependencies": {
    "@electron/notarize": "^3.0.0",
    "@mdi/font": "^7.4.47",
    "@pinia/nuxt": "^0.10.1",
    "pinia": "^3.0.1",
    "vuetify": "^3.4.11"
  },
  "build": {
    "appId": "hse.app.desktop",
    "asar": true,
    "productName": "HSE App Desktop",
    "directories": {
      "output": "release/${version}"
    },
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}_setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "files": [
      ".output/**/*",
      "dist-electron",
      ".env"
    ]
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447"
}
